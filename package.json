{
	"name": "dtop",
	"version": "1.0.1",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/beyeshooter/dtop.git"
	},
	"homepage": "https://github.com/beyeshooter/dtop#readme",
	"description": "A developer-focused terminal dashboard for monitoring system status, Docker, Git, and more.",
	"license": "MIT",
	"bin": {
		"dtop": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo",
		"prepublishOnly": "npm run build && npm run test"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"cli",
		"dashboard",
		"monitor",
		"terminal",
		"ink",
		"react",
		"docker",
		"git",
		"system"
	],
	"dependencies": {
		"axios": "^1.13.2",
		"date-fns": "^4.1.0",
		"ink": "^4.1.0",
		"ink-big-text": "^2.0.0",
		"ink-divider": "^4.1.1",
		"ink-gradient": "^3.0.0",
		"ink-progress-bar": "^3.0.0",
		"ink-scroll-list": "^0.4.1",
		"js-yaml": "^4.1.1",
		"macos-temperature-sensor": "^1.0.4",
		"meow": "^11.0.0",
		"osx-temperature-sensor": "^1.0.8",
		"react": "^18.2.0",
		"react-devtools-core": "^7.0.1",
		"systeminformation": "^5.30.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/js-yaml": "^4.0.9",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off",
			"unicorn/expiring-todo-comments": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"@typescript-eslint/naming-convention": "off",
			"@typescript-eslint/no-implicit-any-catch": "off",
			"@typescript-eslint/no-floating-promises": "off",
			"unicorn/prevent-abbreviations": "off",
			"unicorn/prefer-top-level-await": "off",
			"n/prefer-global/process": "off",
			"@typescript-eslint/prefer-nullish-coalescing": "off",
			"@typescript-eslint/restrict-template-expressions": "off",
			"react/function-component-definition": "off",
			"import/no-extraneous-dependencies": "off",
			"unicorn/no-array-for-each": "off",
			"react/prefer-read-only-props": "off",
			"@typescript-eslint/consistent-type-imports": "off",
			"@typescript-eslint/no-unsafe-return": "off",
			"unicorn/prefer-node-protocol": "off",
			"complexity": "off",
			"react-hooks/exhaustive-deps": "off",
			"react/hook-use-state": "off",
			"@typescript-eslint/prefer-optional-chain": "off",
			"radix": "off",
			"@typescript-eslint/restrict-plus-operands": "off",
			"no-await-in-loop": "off",
			"no-promise-executor-return": "off",
			"react/no-array-index-key": "off",
			"new-cap": "off",
			"no-negated-condition": "off",
			"import/no-named-as-default-member": "off",
			"no-new": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
